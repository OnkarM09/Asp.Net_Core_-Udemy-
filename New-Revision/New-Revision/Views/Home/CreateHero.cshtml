@model Hero;

<div class="row">
    <form class="col s12" asp-controller="Home" asp-action="NewHero" method="post">
        <div class="row">
            <div class="input-field col s6">
                <input placeholder="Placeholder" asp-for="Name" type="text" class="validate">
                <label asp-for="Name"></label>
            </div>
            <div class="input-field col s6">
                <input asp-for="Power" type="text" class="validate">
                <label asp-for="Power"></label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input asp-for="Rank" type="text" class="validate">
                <label asp-for ="Rank"></label>
            </div>
        </div>
        <button class="waves-effect waves-light btn" type="submit">Submit</button>
    </form>
</div>